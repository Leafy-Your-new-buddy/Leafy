<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    android:id="@+id/home_frag"

    >



    <!-- TODO: Update blank fragment layout -->

    <TextView

        android:id="@+id/water_Feedback"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="20dp"

        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="블루투스 활성화"
        android:gravity="center"
        android:background="@drawable/edge"


        />
    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/waterdrop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/water"
        app:civ_border_color="@color/black"
        app:civ_border_width="3dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        app:civ_circle_background_color="@color/white"

        />


    <TextView

        android:id="@+id/tvReceiveData_main"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_width="100dp"
        android:textSize="20dp"
        android:layout_height="22dp"
        android:text=""


         />




    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="bottom"
        android:text="물주기" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/weatherIcon"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="200dp"
        ></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/temperature"
        android:text="0*C"
        android:textSize="25sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp"></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="150dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weatherCondition"
            android:text="--"
            android:textSize="20sp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityName"
            android:textSize="15sp"
            android:layout_marginLeft="50dp"
            android:text="Loading___"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/healthy"
        android:layout_marginTop="230dp"
        android:layout_gravity="center_horizontal"
        ></ImageView>

    <TextView
        android:id="@+id/leafy_condition"
        android:layout_marginTop="475dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="오늘은 기분이 좋아요!"
        android:gravity="center"
        android:backgroundTint="#D1EAB7"
        android:background="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/cafe24surroundair"
        />
    <TextView
        android:id="@+id/succulent_name"
        android:layout_marginTop="450dp"
        android:layout_marginHorizontal="130dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="LEAFY"
        android:gravity="center"
        android:background="@drawable/edge"
        />


</FrameLayout>